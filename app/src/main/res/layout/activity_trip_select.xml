<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_background_color">

    <LinearLayout
        android:id="@+id/wholeTripLinearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewGoBack"
            android:layout_marginTop="@dimen/menuitemsmarginabove"
            android:layout_marginStart="@dimen/menuItemsMarginStart"
            android:layout_marginEnd="@dimen/menuItemsMarginEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center_horizontal"
            android:textColor="@color/teal_200"
            android:paddingStart="@dimen/menuItemsPadStart"
            android:paddingEnd="@dimen/menuItemsPadEnd"
            android:paddingTop="@dimen/menuItemsPadTop"
            android:paddingBottom="@dimen/menuItemsPadBottom"
            android:background="@drawable/rounded_corner_menu_items"
            android:textSize="@dimen/menutextsize" />

        <TextView
            android:id="@+id/tripTextView"
            android:textColor="@color/teal_200"
            android:textSize="@dimen/menutextsize"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>

</ScrollView>